        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": ["node"],
        "lib": ["es6"],
        "outDir": "app/build/"
    },
    "include": [
        "app/src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}